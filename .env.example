# ═══════════════════════════════════════════════════════════════
# Modulys Pax — Admin API (exemplo)
# ═══════════════════════════════════════════════════════════════

ADMIN_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/modulys_pax_admin?schema=public"

# JWT: mesmo PAX_JWT_SECRET deve estar no chat-service e no client-backend do cliente
PAX_JWT_SECRET="modulys-pax-jwt-secret-dev-change-in-production"
PAX_JWT_EXPIRATION="8h"
PAX_JWT_TENANT_EXPIRATION="8h"

# Serviços internos (core, chat) usam esta chave no header x-service-key
PAX_SERVICE_KEY="modulys-pax-internal-service-key-dev-change-in-production"

PORT=3000
NODE_ENV=development
# Em produção, liste origens permitidas separadas por vírgula (ex: https://app.exemplo.com,https://admin.exemplo.com)
# CORS_ORIGIN=https://seu-dominio.com

DB_ADMIN_HOST="localhost"
DB_ADMIN_PORT="5432"
DB_ADMIN_USER="postgres"
DB_ADMIN_PASS="postgres"

BAILEYS_SERVICE_URL="http://localhost:9000"

WORKSPACE_ROOT="../"
DATABASE_PROJECT_PATH="../modulys-pax-database"
TEMPLATES_BASE_PATH="../"
